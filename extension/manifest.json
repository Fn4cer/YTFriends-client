{
    "name": "Youtube Friends",
    "description": "",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html",
		"default_icon": "./sources/YouTube Friends.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage"
    ],
    "background": {
        "scripts": ["background_v3.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/watch*"],
            "js": ["content.js"]
        }
    ]
  }